    {
      "title": "Adding New Artwork",
      "commands": [
        {
          "command": "1. Add image to /public/images/works/[period]/",
          "description": "📁 Place artwork file in appropriate collection folder",
          "copyable": false
        },
        {
          "command": "2. Edit data/works-[period].json",
          "description": "📝 Add image metadata to corresponding JSON file",
          "copyable": false
        },
        {
          "command": "{\n  \"path\": \"/images/works/2022-2025/artwork-name.jpg\",\n  \"title\": \"Artwork Title\",\n  \"year\": \"2025\",\n  \"description\": \"Description here\",\n  \"medium\": \"Digital composite\",\n  \"visible\": true\n}",
          "description": "📋 JSON structure for new artwork entry"
        },
        {
          "command": "3. Use descriptive filenames",
          "description": "💡 TIP: Use 'Big-big-plans.jpg' not 'img001.jpg'",
          "copyable": false
        },
        {
          "command": "4. Set visible: true",
          "description": "✅ Make artwork visible on the website",
          "copyable": false
        }
      ]
    },
    {
      "title": "Homepage Random Images",
      "commands": [
        {
          "command": "code data/homepage-random.json",
          "description": "🎲 Configure rotating hero section images",
          "type": "terminal"
        },
        {
          "command": "{\n  \"images\": [\n    \"/images/works/2022-2025/The-surrealist.jpg\",\n    \"/images/works/alice/Mad-Tea-Party.jpg\"\n  ],\n  \"rotation\": true,\n  \"timer\": 30\n}",
          "description": "📋 JSON structure for random image rotation"
        },
        {
          "command": "Add image path to images array",
          "description": "➕ Include new artworks in random rotation",
          "copyable": false
        },
        {
          "command": "Set timer: 30",
          "description": "⏱️ Seconds between image changes (30 = 30 seconds)",
          "copyable": false
        },
        {
          "command": "Set rotation: false",
          "description": "⏸️ Disable auto-rotation if needed",
          "copyable": false
        }
      ]

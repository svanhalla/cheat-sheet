          "copyable": false
        },
        {
          "command": "2. Remove JSON entry completely",
          "description": "🗑️ Hard delete - remove from configuration",
          "copyable": false
        },
        {
          "command": "3. Delete actual image file",
          "description": "💾 Remove file to prevent orphaned images",
          "copyable": false
        },
        {
          "command": "4. Test the website",
          "description": "🧪 Ensure no broken image links remain",
          "copyable": false
        },
        {
          "command": "rm /public/images/works/period/artwork.jpg",

    {
      "title": "Adding New Artwork",
      "commands": [
        {
          "command": "1. Add image to /public/images/works/[period]/",
          "description": "📁 Place artwork file in appropriate collection folder",
          "copyable": false,
          "uuid": "213cf3d0-4fb1-404a-9599-98911f58c01f"
        },
        {
          "command": "2. Edit data/works-[period].json",
          "description": "📝 Add image metadata to corresponding JSON file",
          "copyable": false,
          "uuid": "500c2a4c-43e1-4bb6-a210-97158ccc55d7"
        },
        {
          "command": "{\n  \"path\": \"/images/works/2022-2025/artwork-name.jpg\",\n  \"title\": \"Artwork Title\",\n  \"year\": \"2025\",\n  \"description\": \"Description here\",\n  \"medium\": \"Digital composite\",\n  \"visible\": true\n}",
          "description": "📋 JSON structure for new artwork entry",
          "uuid": "9007098c-abbe-4776-9208-a72062a96ee1"
        },
        {
          "command": "3. Use descriptive filenames",
          "description": "💡 TIP: Use 'Big-big-plans.jpg' not 'img001.jpg'",
          "copyable": false,
          "uuid": "0da123d5-7b2c-4a84-802a-c687fc01f63c"
        },
        {
          "command": "4. Set visible: true",
          "description": "✅ Make artwork visible on the website",
          "copyable": false,
          "uuid": "1afb1554-50ed-4257-a28a-b1f44919dcdd"
        }
      ],
      "uuid": "6e263003-0465-4c1e-99da-9f57749037c3"
    },
    {

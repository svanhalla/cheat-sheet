    {
      "title": "Removing Images",
      "commands": [
        {
          "command": "1. Set visible: false in JSON",
          "description": "👁️ Soft delete - hide image but keep file",
          "copyable": false,
          "uuid": "d1791916-3b78-41e5-8996-54d5088a5647"
        },
        {
          "command": "2. Remove JSON entry completely",
          "description": "🗑️ Hard delete - remove from configuration",
          "copyable": false,
          "uuid": "6f81f00d-c124-40f0-b188-fd2415d4ab05"
        },
        {
          "command": "3. Delete actual image file",
          "description": "💾 Remove file to prevent orphaned images",
          "copyable": false,
          "uuid": "92d213b3-fe00-4e61-ae83-367deb78c7c0"
        },
        {
          "command": "4. Test the website",
          "description": "🧪 Ensure no broken image links remain",
          "copyable": false,
          "uuid": "ef643922-cf9f-4990-9788-4764e14d92fc"
        },
        {
          "command": "rm /public/images/works/period/artwork.jpg",
          "description": "🗑️ Command to delete image file",
          "type": "terminal",
          "uuid": "af35b6ae-eb91-44da-8b52-f9b8f65aaf00"
        }
      ],
      "uuid": "e1657dd2-adfb-4a87-adf0-6ce8014ef9a3"

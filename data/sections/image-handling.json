    {
      "title": "Adding New Art Collection",
      "commands": [
        {
          "command": "1. Create folder /public/images/works/[new-period]/",
          "description": "📁 Create new collection folder (e.g., '2026-2027')",
          "copyable": false,
          "uuid": "055f47ef-80c1-4cea-9216-ecf1bc586a95"
        },
        {
          "command": "2. Add artwork images to folder",
          "description": "🎨 Upload individual artwork files",
          "copyable": false,
          "uuid": "3b6674fa-8173-4c07-9a53-68ae0191facd"
        },
        {
          "command": "3. Create data/works-[new-period].json",
          "description": "📝 Create JSON file with artwork metadata",
          "copyable": false,
          "uuid": "df956e46-5e56-4093-bde2-ac979e6b8e56"
        },
        {
          "command": "4. Add thumbnail /public/images/works/[new-period].jpg",
          "description": "🖼️ Add collection thumbnail (same name as folder)",
          "copyable": false,
          "uuid": "902d11c5-083b-4e3f-8ad7-636835e040b4"
        },
        {
          "command": "5. Add entry to data/works.json",
          "description": "📋 Register collection on works page",
          "copyable": false,
          "uuid": "8689177a-9357-4238-a44f-a09dd66efaff"
        },
        {
          "command": "6. Add to data/home.json → featuredGalleries",
          "description": "🏠 Optionally feature on homepage",
          "copyable": false,
          "uuid": "5fdb7e41-e0fc-4b8c-8956-7dadad44eb65"
        }
      ],
      "uuid": "99fc5204-6581-4956-9742-f3019350f69e"

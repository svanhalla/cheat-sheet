    {
      "title": "Gallery Thumbnails",
      "commands": [
        {
          "command": "code data/works.json",
          "description": "🖼️ Configure collection thumbnails on works page",
          "type": "terminal"
        },
        {
          "command": "{\n  \"id\": \"2022-2025\",\n  \"title\": \"Recent Works\",\n  \"thumbnail\": \"/images/works/2022-2025/featured.jpg\",\n  \"randomize\": true,\n  \"timer\": 15,\n  \"visible\": true\n}",
          "description": "📋 JSON structure for gallery thumbnail"
        },
        {
          "command": "randomize: true",
          "description": "🎲 Enable cycling through collection images",
          "copyable": false
        },
        {
          "command": "timer: 15",
          "description": "⏱️ Seconds between thumbnail changes",
          "copyable": false
        },
        {
          "command": "thumbnail: \"path\"",
          "description": "🖼️ Static fallback image when randomize is off",
          "copyable": false
        }

        },
        {
          "command": "Use hyphens, avoid spaces",
          "description": "🔤 'artwork-name.jpg' not 'artwork name.jpg'",
          "copyable": false,
          "uuid": "7a2721a0-6ad4-4510-ad56-512f5a2a4b91"
